<%- include('header.ejs') %>

<div class="container py-5">
    <!-- Page Header -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold text-primary">Contact Us</h1>
            <p class="lead text-muted">We'd love to hear from you. Get in touch with us!</p>
        </div>
    </div>

    <!-- Contact Information & Form -->
    <div class="row">
        <!-- Contact Information -->
        <div class="col-lg-5 mb-5 mb-lg-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 p-lg-5">
                    <h3 class="card-title mb-4 fw-bold">Get in Touch</h3>
                    <p class="mb-5">Have questions or need assistance? Feel free to reach out to us using any of the following methods.</p>
                    
                    <!-- Contact Details -->
                    <div class="mb-4">
                        <div class="d-flex align-items-start mb-3">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                <i class="bi bi-geo-alt-fill text-primary fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Our Address</h5>
                                <p class="mb-0">123 Business Street<br>Suite 456<br>City, State 12345<br>Country</p>
                            </div>
                        </div>
                        
                        <div class="d-flex align-items-start mb-3">
                            <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                                <i class="bi bi-telephone-fill text-success fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Phone Number</h5>
                                <p class="mb-0">+1 (555) 123-4567</p>
                                <small class="text-muted">Monday-Friday, 9am-6pm EST</small>
                            </div>
                        </div>
                        
                        <div class="d-flex align-items-start mb-3">
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3">
                                <i class="bi bi-envelope-fill text-warning fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Email Address</h5>
                                <p class="mb-0">info@yourcompany.com</p>
                                <p class="mb-0">support@yourcompany.com</p>
                            </div>
                        </div>
                        
                        <div class="d-flex align-items-start">
                            <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3">
                                <i class="bi bi-clock-fill text-info fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Business Hours</h5>
                                <p class="mb-0">Monday - Friday: 9:00 AM - 6:00 PM</p>
                                <p class="mb-0">Saturday: 10:00 AM - 4:00 PM</p>
                                <p class="mb-0">Sunday: Closed</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Social Media Links -->
                    <div class="mt-5">
                        <h5 class="fw-bold mb-3">Follow Us</h5>
                        <div class="d-flex">
                            <a href="#" class="text-decoration-none me-3">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                                    <i class="bi bi-facebook text-primary fs-5"></i>
                                </div>
                            </a>
                            <a href="#" class="text-decoration-none me-3">
                                <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                                    <i class="bi bi-twitter text-info fs-5"></i>
                                </div>
                            </a>
                            <a href="#" class="text-decoration-none me-3">
                                <div class="bg-danger bg-opacity-10 p-3 rounded-circle">
                                    <i class="bi bi-instagram text-danger fs-5"></i>
                                </div>
                            </a>
                            <a href="#" class="text-decoration-none">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                                    <i class="bi bi-linkedin text-primary fs-5"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Contact Form -->
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4 p-lg-5">
                    <h3 class="card-title mb-4 fw-bold">Send us a Message</h3>
                    <p class="text-muted mb-4">Fill out the form below and we'll get back to you as soon as possible.</p>
                    
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label fw-bold">First Name *</label>
                                <input type="text" class="form-control" id="firstName" required>
                                <div class="invalid-feedback">
                                    Please enter your first name.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label fw-bold">Last Name *</label>
                                <input type="text" class="form-control" id="lastName" required>
                                <div class="invalid-feedback">
                                    Please enter your last name.
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label fw-bold">Email Address *</label>
                                <input type="email" class="form-control" id="email" required>
                                <div class="invalid-feedback">
                                    Please enter a valid email address.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label fw-bold">Phone Number</label>
                                <input type="tel" class="form-control" id="phone">
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="subject" class="form-label fw-bold">Subject *</label>
                            <select class="form-select" id="subject" required>
                                <option value="" selected disabled>Select a subject</option>
                                <option value="general">General Inquiry</option>
                                <option value="support">Technical Support</option>
                                <option value="billing">Billing Question</option>
                                <option value="feedback">Feedback</option>
                                <option value="other">Other</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a subject.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="message" class="form-label fw-bold">Message *</label>
                            <textarea class="form-control" id="message" rows="5" required></textarea>
                            <div class="invalid-feedback">
                                Please enter your message.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="newsletter">
                                <label class="form-check-label" for="newsletter">
                                    Subscribe to our newsletter for updates and promotions
                                </label>
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-2"></i> Send Message
                            </button>
                        </div>
                    </form>
                    
                    <!-- Success Message (hidden by default) -->
                    <div class="alert alert-success mt-4 d-none" id="successMessage" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        Thank you! Your message has been sent successfully. We'll get back to you soon.
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Map Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="p-4">
                        <h3 class="card-title mb-3 fw-bold">Find Us</h3>
                        <p class="text-muted mb-0">Visit our office location</p>
                    </div>
                    <!-- Map Placeholder - Replace with actual Google Maps embed -->
                    <div class="bg-light" style="height: 400px;">
                        <div class="h-100 d-flex align-items-center justify-content-center">
                            <div class="text-center">
                                <i class="bi bi-map text-muted" style="font-size: 3rem;"></i>
                                <h5 class="mt-3 text-muted">Map Location</h5>
                                <p class="text-muted">Replace this with your Google Maps embed code</p>
                                <a href="https://maps.google.com" target="_blank" class="btn btn-outline-primary">
                                    <i class="bi bi-arrow-up-right-square me-2"></i>Open in Google Maps
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- FAQ Section -->
    <div class="row mt-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">Frequently Asked Questions</h2>
            <p class="text-muted">Quick answers to common questions</p>
        </div>
        
        <div class="col-lg-8 mx-auto">
            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            What are your business hours?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            Our business hours are Monday through Friday, 9:00 AM to 6:00 PM EST. We're also available on Saturdays from 10:00 AM to 4:00 PM.
                        </div>
                    </div>
                </div>
                
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            How quickly can I expect a response?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            We typically respond to all inquiries within 24 hours during business days. For urgent matters, please call our support line.
                        </div>
                    </div>
                </div>
                
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            Do you offer 24/7 support?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            While we don't offer 24/7 phone support, you can email us at any time and we'll respond during our next business hours.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Form validation and submission
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('contactForm');
        const successMessage = document.getElementById('successMessage');
        
        form.addEventListener('submit', function(event) {
            event.preventDefault();
            event.stopPropagation();
            
            // Check form validity
            if (form.checkValidity()) {
                // In a real application, you would send the form data to a server here
                // For demonstration, we'll just show the success message
                
                // Simulate API call delay
                setTimeout(() => {
                    // Show success message
                    successMessage.classList.remove('d-none');
                    
                    // Reset form
                    form.reset();
                    form.classList.remove('was-validated');
                    
                    // Scroll to success message
                    successMessage.scrollIntoView({ behavior: 'smooth' });
                    
                    // Hide success message after 5 seconds
                    setTimeout(() => {
                        successMessage.classList.add('d-none');
                    }, 5000);
                }, 1000);
            }
            
            form.classList.add('was-validated');
        });
    });
</script>

